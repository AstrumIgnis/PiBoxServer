@page "/"

<PageTitle>Index</PageTitle>

<div id="sending_container" class="container">
    <div class="row align-items-center">
        <button class="col button btn message_button" @onclick="ComeHere">Come Here</button>
        <button class="col button btn message_button" @onclick="RightUp">Be right up</button>
        <button class="col button btn message_button" @onclick="InGame">In a game</button>
    </div>
    <div class="row align-items-center">
        <button class="col button btn message_button" @onclick="Yes">Yes</button>
        <button class="col button btn message_button" @onclick="No">No</button>
        <button class="col button btn message_button" @onclick="Ok">Ok</button>
    </div>
    <div class="row align-items-center">
        <div class="col card RecieveWrapper">
            <div class="card-body text-center recievetext">
                @Messenger.Text
            </div>
        </div>
    </div>
</div>